<%= link_to 'Game Question', root_path, class: "logo" %>
<div class="login-main">
  <h2 class="login-headline">ログイン</h2>

  <%= form_with model: @user, url: user_session_path, class: 'registration-main', local: true do |f| %>
    <div class="field">
      <%= f.label :email, class:"label" %><br />
      <%= f.email_field :email, class:"input-default", autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :password, class:"label" %><br />
      <%= f.password_field :password, class:"input-default", autocomplete: "current-password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "ログイン" %>
    </div>
  <% end %>
</div>
