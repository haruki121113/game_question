<%= link_to 'Game Question', root_path, class: "logo" %>
<div class="signup-main" >
  <h2 class="signup-headline">新規登録</h2>

  <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
    <%= render 'shared/error_messages', model: f.object %>

    <div class="field">
      <%= f.label :nickname, class:"label" %><br />
      <%= f.text_area :nickname, class:"input-default", id:"nickname", placeholder:"例) 太郎" %>
    </div>

    <div class="field">
      <%= f.label :email, class:"label" %><br />
      <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :password, class:"label" %><br />
      <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, class:"label" %><br />
      <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
    </div>

    <div class="field">
      <%= f.label :profile, class:"label" %><br />
      <%= f.text_area :profile, class:"input-default", id:"profile", placeholder:"例) 太郎です" %>
    </div>

    <div class="birthday">
      <p class="birthday-label">生年月日</p>
      <div class='input-birth-wrap'>
        <%= raw sprintf(
                  f.date_select(
                    :birthday,
                    class:'select-birth',
                    id:"birth-date",
                    use_month_numbers: true,
                    prompt:'--',
                    start_year: 1930,
                    end_year: (Time.now.year - 5),
                    date_separator: '%s'),
                  "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
      </div>
    </div>

    <div class="actions">
      <%= f.submit "新規登録" %>
    </div>
  <% end %>
</div>
