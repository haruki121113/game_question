<%= link_to 'Game Question', root_path, class: "logo" %>
<div class="main">
  <h1 class="haedline">質問投稿フォーム</h1>
  <div class="question-form">
    <%= form_with model: @question, local: true do |f| %>
      <%= render 'shared/error_messages', model: f.object %>
      <%= f.text_area :title, placeholder:"質問を入力してください(60字まで)", class:"title-form", maxlength:"60" %>
      <%= f.text_area :content, placeholder:"質問の具体的な内容を入力してください", rows: "8", class:"content-form" %>
      <%= f.submit "投稿する", class:"submit-btn" %>
    <% end %>
  </div>
</div>